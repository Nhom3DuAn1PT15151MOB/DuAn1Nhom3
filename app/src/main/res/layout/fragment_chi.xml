<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_tenkhoanthu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="openkhoanchi"
            android:text="khoản chi" />

        <Button
            android:id="@+id/btn_loaithu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="openloaichi"
            android:text="Loại chi" />
    </LinearLayout>
    <FrameLayout
        android:id="@+id/showfragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <fragment
            android:id="@+id/fragment4"
            android:name="com.example.baitest1.fragment.fragmen_chi.FragmentDSLoaiChi"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <fragment
            android:id="@+id/fragment6"
            android:name="com.example.baitest1.fragment.fragmen_chi.FragmentDSKhoanChi"
            android:layout_width="match_parent"
            android:layout_height="668dp" />



    </FrameLayout>
</LinearLayout>